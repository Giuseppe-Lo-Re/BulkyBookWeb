<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">

            @* Page Title *@
            <h2 class="text-primary">
                Company List
            </h2>
        </div>

        @* Create button *@
        <div class="col-6 text-end">
            <a asp-controller="Company"
               asp-action="Upsert"
               class="btn btn-danger">

                @* Plus circle icon *@
                <i class="bi bi-plus-circle"></i>
                &nbsp; Create new Company
            </a>
        </div>
    </div>
    <br><br />

    @* Table *@
    <table id="tblData" class="table table-bordered table-striped" style="width:100%">

        @* Table Header *@
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Phone Number</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/company.js"></script>
}