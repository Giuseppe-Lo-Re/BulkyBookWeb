@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">

            @* Title *@
            <h2 class="text-primary">
                Category List
            </h2>
        </div>

        @* Create button *@
        <div class="col-6 text-end">
            <a asp-controller="Category"
               asp-action="Create"
               class="btn btn-primary"
            >
                @* Plus circle icon *@
                <i class="bi bi-plus-circle"></i>
                &nbsp; Create new category
            </a>
        </div>
    </div>
    <br><br />

    @* Table *@
<table class="table table-bordered table-striped" style="width:100%">

    @* Table Header *@
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
    </thead>

    @* Table Body *@
    <tbody>

        @* Foreach Loop to print category list from db *@
        @foreach (var obj in Model)
        {
            <tr>
                @* Name column *@
                <td width="50%">
                    @obj.Name
                </td>

                @* Display Order Column *@
                <td width="50%">
                    @obj.DisplayOrder
                </td>

                
                <td>
                    <div class="w-20 btn-group">

                        @* Edit button *@
                        <a asp-controller="Category"
                           asp-action="Edit"
                           asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2">

                            @* Pencil square icon *@
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        @* Delete button *@
                        <a asp-controller="Category"
                           asp-action="Delete"
                           asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2">

                            @* Trash can icon *@
                            <i class="bi bi-trash3-fill"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>