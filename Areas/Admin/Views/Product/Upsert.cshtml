@model Product

<form method="post" asp-action="Upsert">
    <div class="border p-3 mt-4">
        <div class="row pb-2">

            @* Page Title *@
            <h2 class="text-primary">
                Edit Product
            </h2>
            <hr />
        </div>

        @* Validation summary *@
        @*<div asp-validation-summary="All"></div>*@

        @* Title *@
        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />

            @* Validation *@
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        @* Description *@
        <div class="mb-3">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" row="3" class="form-control"> </textarea>

            @* Validation *@
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        @* ISBN *@
        <div class="mb-3">
            <label asp-for="ISBN"></label>
            <input asp-for="ISBN" class="form-control" />

            @* Validation *@
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>

        @* Author *@
        <div class="mb-3">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" />

            @*Validation*@
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        @* ListPrice *@
        <div class="mb-3">
            <label asp-for="ListPrice"></label>
            <input asp-for="ListPrice" class="form-control" />

            @* Validation *@
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>

        @* Price *@
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />

            @* Validation *@
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        @* Price50 *@
        <div class="mb-3">
            <label asp-for="Price50"></label>
            <input asp-for="Price50" class="form-control" />

            @* Validation *@
            <span asp-validation-for="Price50" class="text-danger"></span>
        </div>

        @* Price100 *@
        <div class="mb-3">
            <label asp-for="Price100"></label>
            <input asp-for="Price100" class="form-control" />

            @* Validation *@
            <span asp-validation-for="Price100" class="text-danger"></span>
        </div>

        @* Update button *@
        <button type="submit" class="btn btn-primary" style="width:150px">
            Update
        </button>

        @* Back to List button *@
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@*Validation (no reload on error validation)*@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}